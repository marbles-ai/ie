# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx,html,sass,scss,css}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{h,cpp,cc,hpp,java,sh}]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.java]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[gradle.build]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.py]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
